# =============================================================================
# Sigma Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Only OPENAI_API_KEY is required for basic usage

# =============================================================================
# LLM Provider API Keys (at least one required)
# =============================================================================

# OpenAI (required for default configuration)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (optional - for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI (optional)
AZURE_API_KEY=your-azure-openai-api-key-here
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview

# =============================================================================
# Storage Backends (optional)
# =============================================================================

# Azure Blob Storage - for trajectory storage (optional, falls back to local storage)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string-here

# =============================================================================
# Debug Settings (optional)
# =============================================================================

# Enable detailed simulator logging
DEBUG_SIMULATOR=false

# Log user prompt generation
DEBUG_USER_PROMPTS=false

# Log agent-side LLM calls (parse action, generate response)
LOG_AGENT_GENERATION=false